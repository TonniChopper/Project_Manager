# Application
APP_ENV=development
DEBUG=True
API_TITLE=Project Manager API
API_V1_PREFIX=/api/v1
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/project_manager

# Redis / Cache
REDIS_URL=redis://redis:6379/0

# Security / Auth
JWT_SECRET=change_me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
git REFRESH_TOKEN_EXPIRE_MINUTES=10080
JWT_ISSUER=project_manager
JWT_AUDIENCE=project_manager_users

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# External services
FRONTEND_URL=http://localhost:3000
N8N_URL=http://localhost:5678
AI_SERVICE_URL=http://ai-service:8001
WORKFLOWS_URL=http://workflows:5678

# Observability
SENTRY_DSN=

# WebSocket
WS_MAX_CONNECTIONS_PER_USER=5
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_MAX_SIZE=1048576
